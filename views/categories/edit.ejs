<% include ../partials/header %>
    <div class="form-style mt-4">
         <h5>Edit <%=cat.name%></h5>
        <form action="/categories/<%=cat._id%>?_method=PUT" method="post">
            <div class="form-group">
                 <label for="name">Category Name</label>
                <input class="form-control" type="text" id="name" name="cat[name]" value="<%=cat.name%>"placeholder="Category Name" required>
            </div>
            <div class="form-group">
                <label for="usedFor">Category is used for</label>
                <select class="form-control select" name="cat[usedFor]" id="usedFor">
                    <option value="Any" <%=cat.usedFor==='Any' ? 'selected':''%> >Any</option>
                    <option value="Links" <%=cat.usedFor==='Links' ? 'selected':''%> >Links</option>
                    <option value="Sites" <%=cat.usedFor==='Sites' ? 'selected':''%> >Sites</option>
                </select>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="cat[disabled]" <%=cat.disabled===true ? 'checked':''%> value="true">
                    Disabled
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Apply Changes</button>
            </div>
        </form>
        <a href="/categories">Go Back</a>
    </div>
<% include ../partials/footer %>