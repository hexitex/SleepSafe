<% include ../partials/header %>
    <div class="form-style mt-4">
         <h5>Add Country</h5>
        <form action="/countries/" method="post">
            <div class="form-group">
                 <label for="name">Country Name</label>
                <input class="form-control" type="text" id="name" name="cnt[name]" placeholder="Country Name" required>
            </div>
           
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="cnt[disabled]" value="true">
                    Disabled
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Add</button>
            </div>
        </form>
        <a href="/countries">Go Back</a>
    </div>
<% include ../partials/footer %>