<% include ../partials/header %>
    <div class="form-style mt-4">
         <h5>Edit <%=cnt.name%></h5>
        <form action="/countries/<%=cnt._id%>?_method=PUT" method="post">
            <div class="form-group">
                 <label for="name">Country Name</label>
                <input class="form-control" type="text" id="name" name="cnt[name]" value="<%=cnt.name%>"placeholder="Country Name" required>
            </div>
            
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="cnt[disabled]" <%=cnt.disabled===true ? 'checked':''%> value="true">
                    Disabled
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Apply Changes</button>
            </div>
        </form>
        <a href="/countries">Go Back</a>
    </div>
<% include ../partials/footer %>